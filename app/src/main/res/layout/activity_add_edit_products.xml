<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditProductsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addProductTitle"
            android:layout_width="267dp"
            android:layout_height="43dp"
            android:fontFamily="casual"
            android:text="@string/product_add"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="66dp" />

        <EditText
            android:id="@+id/addProductNameInput"
            android:layout_width="346dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="@string/addedit_hint_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/addProductAmountInput"
            android:layout_width="346dp"
            android:layout_height="56dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="@string/addedit_hint_amount"
            android:inputType="number" />

        <EditText
            android:id="@+id/addProductPriceInput"
            android:layout_width="346dp"
            android:layout_height="56dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="@string/addedit_hint_price"
            android:inputType="number" />

        <EditText
            android:id="@+id/addProductBrandInput"
            android:layout_width="346dp"
            android:layout_height="56dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="@string/addedit_hint_brand"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/addProductType"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/addProductConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/addedit_add"
                android:textColorHighlight="@color/design_default_color_primary"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/addProductCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/addedit_cancel"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>